/********** Template CSS **********/
@import
	url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500&display=swap')
	;

:root {
	-primary: #009CFF; 
	-light: #F3F6F9;
	-dark: #191C24;
}
.container,.container-accordion {
  display: grid;
  grid-template-columns: repeat(2, 500px);
}

/* service*/
.serviceContents{
	border:1px solid rgba(0,0,0,0.55);
	width : 95%; 
	border-radius: 5px;
	display:inline-block;
	padding : 5px;
	word-break: keep-all;
}

.contentTable{
	text-align: center;
}
.contentTr td, .contentTr th{
	height : 60px;
	text-align: center;
	padding-top : 14px;
	
}
.contentTr td:nth-child(1),
.contentTr th{
	font-size : 1.2em;
	
}

.serviceContents a:link,
.serviceContents a:visited,
.serviceContents a:hover,
.serviceContents a:active{
	text-decoration: none;
	color : rgba(0,0,0,0.55);
}
.serviceInfo{
	margin-top : 10px;
	margin-left : 25px;
}

.serviceName{
    color: rgb(48, 52, 65);
    font-weight: bold;
   	font-size: 0.8em;
}
.servicePrice{
	text-align: right;
	font-size: 0.9em;
	font-weight: bolder;
}

.imageList{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    min-height: 170px;
    gap: 20px 4px;
	align-content: center;
	width : 100%;
}

.serviceContent{
   display : inline-block;
   margin : 5px;
   padding : 5px;
   width : 215px;
   height : 350px;
   border:1px solid red; 
   word-break: keep-all;
}
.serviceContent img{
   width : 200px; height : auto
}
/*service End*/


.textLengthCheck{
   text-align : right;
}

.item2 {
   padding : 10px;
   padding-left : 20px;
}


.nav-item {
   font-family: 'Noto Sans KR', sans-serif;
}

.asidemin{
   max-width : 450px;
   
}

.search-border{
   border: 1px solid #ced4da;
   height : 35px;
   margin-top : 2px;
}
.container-center-align{
   margin-left : 250px;
   
   
}
