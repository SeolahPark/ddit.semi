@media (min-width: 1400px)
.container, .container-sm, .container-md, .container-lg, .container-xl, .container-xxl {
    max-width: 1320px;
}

*, *::before, *::after {
    box-sizing: border-box;
}

.content {
    width: calc(100% - 250px);
    margin: auto;
    min-height: 100vh;
    background: #FFFFFF;
    transition: 0.5s;
}

*, *::before, *::after {
    box-sizing: border-box;
}

#chatList {
	margin: 20px auto;
    width: 1000px;
}
#chatspace {
	display: none;
}

#chatWindow {
	margin: auto; 
	border : 1px solid black;
	width: calc(100% - 500px);
	height: 310px;
	overflow: auto;
	paading: 5px;
	border: 1px solid black;
}

#chatLower {
	margin: auto;
	text-align: right;
}

input[type=file] {
	margin-right: 150px;
}

.chatText, input[type=text] {
	margin: auto;
	text-align: center;
}

#chatMessage {
	margin: auto;
	width: calc(100% - 500px);
	height: 50px;
}

#sendBtn, #listBtn {
	float: right;
	height: 50px;
	position: relative;
	margin-left: 10px;
	left: -2px;
}

#chatId {
	width: 158px;
	height: 24px;
	border: 1px solid #AAAAAA;
	background-color: #EEEEEE;
}

.targetMsg {
	margin-bottom: 5px;
	color: #616264;
	background-color: #fdfdfe;
	border-color: #fbfcfd;
    margin-left: 20px;
    display: inline-block;
	text-align: left;
}

.myMsg {
	color: #616264;
    background-color: #fdfdfe;
    border-color: #fbfcfd;
    margin-right: 20px;
    text-align: right;
    display: inline-block;
    float: right;
}
